                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
