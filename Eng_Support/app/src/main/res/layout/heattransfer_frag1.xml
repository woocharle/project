                    android:layout_height="wrap_content"
                    android:text=" Temperature(˚C)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/htr_temp1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/htr_temp2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Flow rate (kg/h)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/htr_comp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Emissivity"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/htr_em"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text=" Density(kg/m3)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/htr_den1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/htr_den2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Over Design (%)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
