                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text=" Viscosity(cP)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
