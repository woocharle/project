<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Line.No"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/hyd_lineno"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/hyd_calculation"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Calculate"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Process"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Phase"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <Spinner
                    android:id="@+id/hyd_spinner1"
                    android:layout_width="266dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <RadioGroup
                    android:id="@+id/hyd_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/hyd_rg_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inlet"
                        android:textSize="24dp" />

                    <RadioButton
                        android:id="@+id/hyd_rg_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Outlet"
                        android:textSize="24dp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" Flow rate(kg/hr)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_flow"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Over Design(%)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_over"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Temperature(CËš)"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/hyd_temp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Viscosity(cP)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_vis"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" Density (kg/m3)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_den"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Molecular"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_mol"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Compress fact(Z)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_comp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Cp/Cv"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_cpcv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" Inlet Press(kg/cm2G)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_pin"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Outlet Press(kg/cm2G)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_pout"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text=" Press Drop (kg/cm2G)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Total:"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_dp1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Friction:"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_dp2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Gravity:"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_dp3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Pipe Spec."
                    android:textColor="#000"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" Complex Factor"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/hyd_spinner2"
                    android:layout_width="450dp"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text=" Equivalent Length"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_eqlen"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" Line Size (inch)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/hyd_spinner3"
                    android:layout_width="120dp"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Inside of Dia (m)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_din"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Wall Roughness"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_wall"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" schedule or class"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/hyd_spinner4"
                    android:layout_width="120dp"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Length of Pipe (m)"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_pipelen"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Elevation Change"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/hyd_elechange"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>